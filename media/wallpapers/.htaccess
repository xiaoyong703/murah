# Allow image files only
<Files "*.php">
    Order Deny,Allow
    Deny from all
</Files>
<Files "*.js">
    Order Deny,Allow
    Deny from all
</Files>
<Files "*.py">
    Order Deny,Allow
    Deny from all
</Files>

# Set proper MIME types for images
<IfModule mod_mime.c>
    AddType image/jpeg .jpg .jpeg
    AddType image/png .png
    AddType image/gif .gif
    AddType image/webp .webp
</IfModule>
